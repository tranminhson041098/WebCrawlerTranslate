<h3 style="color: darkblue; font-style: italic; font-weight: bold;;">Hệ thống crawl dữ liệu từ trang tiếng Anh </h3>

<div>
    <table class="table table-striped table-bordered table-hover">
        <thead style="background-color: gray;">
            <th>STT</th>
            <th>Title of passages</th>
            <th>Other Options</th>
        </thead>
        <tbody> 
            {{#each html}}
            <tr>
                <th>{{sum @index 1}}</th>
                <th>{{this.attribs.title}}</th>
                <th><a href="http://localhost:3000/detail/{{this.attribs.title}}" class="btn btn-primary">Begin to Practise</a></th>

            </tr>
            {{/each}}
            
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="{{previousPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item" ><a class="page-link" href="http://localhost:3000/listpassages?name=&page=1">1</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/listpassages?name=&page=2">2</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/listpassages?name=&page=3">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="http://localhost:3000/listpassages?name=&page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>



        </tbody>

      

    </table>
</div> 


